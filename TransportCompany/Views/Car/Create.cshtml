@model TransportCompany.Models.CodeFirst.Car
@{
    ViewData["Title"] = "Добавить автомобиль";
}

<h2>Добавить автомобиль</h2>

<div>
    @Html.ActionLink("Все автомобили", "Index")
</div>

<div class="row">
    <div class="col-md-6" s>
        @Html.ValidationSummary(true)
        <form method="post">
            <table class="table table-bordered">
                <tr>
                    <th>@Html.DisplayNameFor(m => m.RegistrationNumber)</th>
                    <td>
                        @Html.EditorFor(m => m.RegistrationNumber)
                        @Html.ValidationMessageFor(m => m.RegistrationNumber)
                    </td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(m => m.BodyNumber)</th>
                    <td>
                        @Html.EditorFor(m => m.BodyNumber)
                        @Html.ValidationMessageFor(m => m.BodyNumber)
                    </td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(m => m.EngineNumber)</th>
                    <td>
                        @Html.EditorFor(m => m.EngineNumber)
                        @Html.ValidationMessageFor(m => m.EngineNumber)
                    </td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(m => m.YearCreation)</th>
                    <td>
                        @Html.EditorFor(m => m.YearCreation)
                        @Html.ValidationMessageFor(m => m.YearCreation)
                    </td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(m => m.Mileage)</th>
                    <td>
                        @Html.EditorFor(m => m.Mileage)
                        @Html.ValidationMessageFor(m => m.Mileage)
                    </td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(m => m.LastMaintenanceDate)</th>
                    <td>
                        @Html.EditorFor(m => m.LastMaintenanceDate)
                        @Html.ValidationMessageFor(m => m.LastMaintenanceDate)
                    </td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(m => m.CarModelId)</th>
                    <td>@Html.DropDownListFor(m => m.CarModelId, ViewBag.CarModels as SelectList)</td>
                </tr>
            </table>
            <input type="submit" value="Добавить" />
        </form>
    </div>
</div>

@section scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}